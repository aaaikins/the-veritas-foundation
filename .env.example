# Frontend Environment Variables
# Copy this file to .env.local and update the values as needed

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="The Veritas Foundation"

# Analytics (uncomment and add your IDs when ready)
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# NEXT_PUBLIC_FACEBOOK_PIXEL_ID=FACEBOOK_PIXEL_ID

# Email Configuration (for contact forms - if using EmailJS or similar)
# NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_service_id
# NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_template_id
# NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_public_key

# Social Media Links
# NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/veritasfoundation
# NEXT_PUBLIC_TWITTER_URL=https://twitter.com/veritasfoundation
# NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/veritasfoundation
# NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/veritasfoundation

# Feature Flags
# NEXT_PUBLIC_ENABLE_DONATIONS=true
# NEXT_PUBLIC_ENABLE_NEWSLETTER=true
# NEXT_PUBLIC_ENABLE_CONTACT_FORM=true

# Development
# NEXT_PUBLIC_DEBUG=false
